<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/primary_text_light"
            android:text="The activity B instance "/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10, Feb, 2019"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_below="@id/txtTitle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_below="@id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="4"
            android:layout_marginBottom="8dp"
            android:text="So after I called activity B I can use the UP-button to get back to the activity A. The problem is that the application seems to call the onCreate()-function of activity A again and this is not the behaviour I need. I need activity A to look the same way like it looked before I called activity B."/>

    </RelativeLayout>
</android.support.design.card.MaterialCardView>